<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="275dp"
   android:id="@+id/clySquare">

    <ImageView
        android:clickable="true"
        android:scaleType="fitCenter"
        android:id="@+id/imvAlbum"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_margin="5dp"
        android:src="@drawable/goodkidplaceholder"

        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="32dp"
        android:focusable="true" />

    <TextView
        android:id="@+id/txvAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Good Kid EP1"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imvAlbum"
        app:layout_constraintVertical_bias="0.515" />

    <TextView
        android:id="@+id/txvYear"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="2018"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imvAlbum" />

    <TextView
        android:id="@+id/txvAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good Kid"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/txvAlbum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imvAlbum" />


</androidx.constraintlayout.widget.ConstraintLayout>